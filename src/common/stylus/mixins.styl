c($color=#898989)
  color $color
ft($size=14px)
  font-size $size
border-1px($color=#e7e7e7)
  position relative
  &:before
    content ''
    position absolute
    top 0
    width 100%
    height 1px
    transform scaleY(0.5)
    background $color
border-b-1px($color=#e7e7e7)
  border-1px($color)
  &:before
    bottom 0
    top auto
    left 0
